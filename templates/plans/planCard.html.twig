


{% block planCard %}

 <!-- Card wrapper -->
  <div class="shadow-lg flex flex-wrap w-full mx-auto">
    
    <!-- Card image -->
    {% if plan.imageName %}
        <div class="bg-cover bg-bottom border w-full md:w-1/3 h-64 md:h-auto relative" style="background-image:url('{{  vich_uploader_asset(plan) | imagine_filter('squard_med') }}')">

      {% else %}
      <div class="bg-cover bg-bottom border w-full md:w-1/3 h-64 md:h-auto relative" style="background-image:url('https://images7.alphacoders.com/347/347549.jpg')">
      {% endif %}
      <div class="absolute text-xl">
        <i class="fa fa-heart text-white hover:text-red-light ml-4 mt-4 cursor-pointer"></i>
      </div>
    </div>
    <!-- ./Card image -->
    
    <!-- Card body -->
    <div class="bg-white w-2/3">
      <!-- Card body - outer wrapper -->
      <div class="h-full mx-auto px-6 md:px-0 md:pt-6 md:-ml-6 relative">
        <!-- Card body - inner wrapper -->
        <div class="bg-white  p-6 -mt-6 md:mt-0 relative mb-4 md:mb-0 flex flex-wrap md:flex-wrap items-center">
          <!-- Card title and subtitle -->
          <div class="w-full text-left">
            <h3>{{title|u.truncate(20,'.',false)}}</h3>
            <p class="mb-0 mt-3 text-grey-dark text-sm italic">{{type}}  <span class="text-yellow-500">~ {{rating|format_number({fraction_digit:1})}} stars</span></p>
            <hr class="w-1/4 md:ml-0 mt-4  border ">
          </div>
          <!-- ./Card title and subtitle -->
          
          <!-- Card description -->
          <div class="w-full  ">
            <p class="text-md mt-4  text-justify md:text-left text-sm">
              {{description|u.truncate(200,'...',false)}} 
            </p>
          </div>
          <!-- ./Card description -->
          
          <!-- Call to action button -->
          <a href="{{path("app_plan_show", {slug: slug})}}" class="w-40  mt-6 text-center md:text-left">
            <button class="bg-gray-50 hover:text-gray-500 border border-solid border-gray w-full py-2">View more</button>
          </a>
          <!-- ./Call to action button -->
        </div>
        <!-- ./Card body - inner wrapper -->
      </div>
      <!-- ./Card body - outer wrapper -->
    </div>
    <!-- ./Card body -->
  </div>
  <!-- ./Card wrapper -->
{% endblock %}
