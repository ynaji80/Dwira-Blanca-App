{% extends 'base.html.twig' %}

{% block title %}Place detail!{% endblock %}

{% block body %}
    
<section class="relative bg-gray-100 ">
  <div class="relative pt-16 pb-32 flex content-center items-center justify-center min-h-screen-75">
        <div class="absolute top-0 w-full h-96 bg-center bg-cover" style="
            background-image: url('https://images.unsplash.com/photo-1552566626-52f8b828add9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80');
          ">
          <span id="blackOverlay" class="w-full h-full absolute opacity-75 bg-black"></span>
        </div>
        <div class="container relative mx-auto">
          <div class="items-center flex flex-wrap">
            <div class="w-full lg:w-6/12 px-4 ml-auto mr-auto text-center">
              <div class="pr-12">
                <h1 class="text-white font-semibold text-5xl">
                  Checkout Our {{plan.type}}.
                </h1>
              </div>
            </div>
          </div>
        </div>
      </div>
      <section class="pb-10 bg-gray-100 -mt-64">
        <div class="container mx-auto px-4">
          <div class="2xl:mx-auto 2xl:container lg:px-20 lg:py-16 md:py-12 md:px-6 py-9 px-4 w-96 sm:w-auto">
              <div role="main" class="flex flex-col">
                  <h1 class="text-4xl font-semibold leading-9 text-gray-800 ">{{plan.title}}</h1>
                  <div class="flex items-center text-gray-600 mt-4">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                      <p class="text-base ml-2">{{plan.location}}</p>
                  </div>
                  <div class="flex justify-start items-center mt-4">
                    <div class="cursor-pointer flex space-x-2 mr-3">
                        <img class="" src="https://tuk-cdn.s3.amazonaws.com/can-uploader/quick_view_4-svg2.svg" alt="stars">
                        <img class="hidden " src="https://tuk-cdn.s3.amazonaws.com/can-uploader/quick_view_4-svg2dark.svg" alt="stars">
                    </div>
                    <p class="font-normal text-sm leading-3 hover:text-gray-700 duration-100 cursor-pointer text-gray-500 underline">18 reviews</p>
                  </div>
              </div>
              
              <div class="flex  space-x-14">
                  <div class="flex flex-col mt-10">
                      <h1 class="text-4xl font-semibold leading-9 text-gray-800 ">Overview</h1>
                      <p class="text-base mt-5">{{plan.description}}</p>
                      <div class="border-b mt-5 border-gray-500"></div>
                      <div class="lg:flex items-stretch md:mt-12 mt-8">
                        <div class="lg:w-1/2">
                      <div class="sm:flex items-center justify-between xl:gap-x-8 gap-x-6">
                          <div class="sm:w-1/2 relative">
                              <img src="https://i.ibb.co/DYxtCJq/img-1.png" class="w-full" alt="chair" />
                          </div>
                          <div class="sm:w-1/2 sm:mt-0 mt-4 relative">
                              <img src="https://i.ibb.co/3C5HvxC/img-2.png" class="w-full" alt="wall design" />
                          </div>
                      </div>
                      <div class="relative">
                          <img src="https://i.ibb.co/Ms4qyXp/img-3.png" alt="sitting place" class="w-full mt-8 md:mt-6 hidden sm:block" />
                          <img class="w-full mt-4 sm:hidden" src="https://i.ibb.co/6XYbN7f/Rectangle-29.png" alt="sitting place" />
                      </div>
                  </div>
                  <div class="lg:w-1/2 xl:ml-8 lg:ml-4 lg:mt-0 md:mt-6 mt-4 lg:flex flex-col justify-between">
                      <div class="relative">
                          <img src="https://i.ibb.co/6Wfjf2w/img-4.png" alt="sitting place" class="w-full sm:block hidden" />
                          <img class="w-full sm:hidden" src="https://i.ibb.co/dpXStJk/Rectangle-29.png" alt="sitting place" />
                      </div>
                      <div class="sm:flex items-center justify-between xl:gap-x-8 gap-x-6 md:mt-6 mt-4">
                          <div class="relative w-full">
                              <img src="https://i.ibb.co/3yvZBpm/img-5.png" class="w-full" alt="chair" />
                          </div>
                          <div class="relative w-full sm:mt-0 mt-4">
                              <img src="https://i.ibb.co/gDdnJb5/img-6.png" class="w-full" alt="wall design" />
                          </div>
                      </div>
                  </div>

              </div>
                <div class="border-b mt-5 border-gray-500"></div>
                {% if app.user.id == plan.user.id  %}
                <div class="ps-3 pb-3 mt-5"> 
                        <a href="{{  path('app_plans_edit',{slug: plan.slug}) }}" class="btn btn-outline-dark">Edit</a> 
                        <a href="#" onclick="event.preventDefault(); confirm('Are you sure?') && document.getElementById('js-plan-delete-form').submit(); " class="btn btn-outline-dark">Delete</a>
                
                </div>
                    
                {% else %}
                    <div class="mt-10">
                    <h1 class="text-4xl font-semibold leading-9 text-gray-800 ">Book Now</h1>
                    {{ form_start(reservationForm) }}
                        <div class="form-group row mt-5 mb-5 ">
                            <label class="col-sm-2 form-label ">
                                {{form_label(reservationForm.date)}}
                            </label>
                            <div class="col-sm-10">
                                {{ form_widget(reservationForm.date, {'attr': {'class': ''}}) }} 
                            </div>
                                
                        </div>
                        <div class="form-group row mb-5">
                            <label class="col-sm-2 form-label ">
                                {{form_label(reservationForm.time)}}
                            </label>
                            <div class="col-sm-10">
                                {{ form_widget(reservationForm.time,{'attr': {'class': ''}}) }}
                            </div>
                                
                        </div>
                        <div class="form-group col-md-4 row mb-5">
                            {{ form_widget(reservationForm.Book,{'attr': {'class': 'btn btn-outline-dark mb-2 '}}) }} 
                        </div>
                    
                    {{ form_end(reservationForm) }}
                </div>
                {% endif %}
                
                  </div> 
            <div class="flex flex-col mt-10">
                <div class="mb-4 w-80  px-2 py-4 bg-gray-100 rounded border-sky-700 border-b-2 border-l-2 border-r-2 border-t-8">
                    <div class="w-full">
                        <p class="text-3xl font-semibold text-center md:mt-5 ">
                            Contact
                        </p>
    
                        <ul class="mt-5 py-2 px-4 text-md text-gray-600">
                            <li class="flex mb-3 py-1 font-semibold">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-sky-800 font-bold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" >
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                                <span class="ml-2">{{plan.location}}</span>
                            </li>
                            <li class="flex mb-3 py-1 font-semibold">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-sky-800 font-bold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                                <span class="ml-2">{{plan.number}}</span>
                            </li>
                            <li class="flex mb-3 py-1 font-semibold">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-sky-800 font-bold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                                </svg>
                                <span class="ml-2"> I{{plan.email}}</span>
                            </li>
                            <li class="flex mb-3 py-1 font-semibold">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-sky-800 font-bold" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span class="ml-2">{{plan.website}}</span>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="mb-4 w-80  px-2 py-4 bg-gray-100 rounded border-sky-700 border-b-2 border-l-2 border-r-2 border-t-8">
                    <p class="text-3xl leading-normal text-center font-semibold text-black pt-4">
                        Working Hours
                    </p>
                     
                    <ul>
                    
                       {% for day,time in plan.calendar %}
                        <li class="mt-6 text-xs font-medium text-black py-2 border-t border-gray-300 flex items-center justify-around">
                            <p class="text-lg font-inter text-center font-semibold text-gray-700 ">
                                {{day}}</p>
                            {% if time is empty %}
                                <p class="text-lg font-inter text-center font-semibold text-red-600 opacity-90">Closed</p>
                            {% else %}
                                
                                <p class="text-2xl font-inter text-center font-semibold text-gray-800 ">
                                {{time[:2]}}<span class="font-inter text-base  text-center font-medium text-gray-800 ">h</span>
                                <span class="text-lg font-inter  text-center font-semibold text-gray-900 opacity-50">to</span>
                                {{time[3:]}}<span class="font-inter text-base text-center font-medium text-gray-800 ">h</span> </p>
                            {% endif %}
                                
                        </li>
                       {% endfor %}
                       
                    </ul>
                </div>
             </div>
            </div>
            </div>
        </div>
    </section>
</section>
<form id="js-plan-delete-form" action="{{ path('app_plans_delete',{slug: plan.slug}) }}" method="post" style="display:none;"> 
  <input type="hidden" name="csrf_token" value="{{ csrf_token('plan_deletion'~ plan.slug) }}">
  <input type="hidden" name="_method" value="DELETE">
</form>
{% endblock %}
